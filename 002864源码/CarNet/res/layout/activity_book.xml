<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <TextView 
        android:id="@+id/gas_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"
        android:hint="矿大计算机加油站"
        android:textSize="14sp"/>
    
    <TextView 
        android:id="@+id/gas_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:hint="二百v不爱uvbaiuvbailuvbi"/>
    
    <TextView 
        android:id="@+id/gas_distance"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="此加油站距离您1000米"/>
    
    <Spinner 
        android:id="@+id/gas_spinner"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <EditText 
        android:id="@+id/gas_money"
        android:inputType="number"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入加油金额"
        />
     
     <com.cumt.view.ButtonRectangle 
         android:id="@+id/gas_post"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20sp"
         android:text="提交订单"
         android:textSize="8sp"	/>
     
     <com.cumt.view.ButtonRectangle 
         android:id="@+id/gas_return"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="4sp"
         android:text="返回"
         android:textSize="8sp"	/>
     
</LinearLayout>
