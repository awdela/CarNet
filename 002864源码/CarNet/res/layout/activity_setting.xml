<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_setting"
        layout="@layout/title" />
    <!-- #f44336 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingBottom="2dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:text="偏好设置"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/choise_map_type"
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="选择初始地图类型"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/more_pri_maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="#0fff"
                android:src="@drawable/more_pri_maps_grey" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="#aaa" />

        <RelativeLayout
            android:id="@+id/play_when_open"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="开启应用时自动播放音乐"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/auto_music_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:background="@drawable/checkbox_style"
                android:button="@null"
                android:checked="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/choise_play_music"
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <TextView
                android:id="@+id/text_choisemusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="选择开启时播放的音乐"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/choose_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:background="#0fff"
                android:src="@drawable/more_music_grey" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="#aaa" />

        <RelativeLayout
            android:id="@+id/accept_system_msg"
            android:layout_width="match_parent"
            android:layout_height="35dp" 
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="接收系统通知"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/acpt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:background="@drawable/checkbox_style"
                android:button="@null"
                android:checked="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="其他设置"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/check_new_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="检查更新"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/check_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:background="#0fff"
                android:src="@drawable/more_music_grey" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/give_user_advice"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="意见反馈"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/advice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:background="#0fff"
                android:src="@drawable/more_music_grey" />
        </RelativeLayout>

        <com.cumt.view.ButtonRectangle 
            android:id="@+id/change_password"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="#8bc34a"
            android:text="修改密码"
            android:textColor="#fff"
            android:textSize="6.0sp" />

       <com.cumt.view.ButtonRectangle 
            android:id="@+id/quit"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:background="#f44336"
            android:text="退出登录"
            android:textColor="#fff"
            android:textSize="6.0sp" />

    </LinearLayout>

</LinearLayout>