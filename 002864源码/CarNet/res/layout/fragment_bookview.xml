<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical" >
    
     <include layout="@layout/title" />
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="120dp"
         android:background="@color/orange">
         <TextView 
             android:id="@+id/reserve_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="您当前没有预约哦"
             android:textSize="30sp"
             android:textColor="@color/white"
             android:layout_marginLeft="16dp"
             android:layout_marginTop="20dp"/>
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="7dp"
             android:layout_below="@id/reserve_time">
         <TextView 
             android:id="@+id/car_number"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="16dp"
             android:hint="车牌号"
             android:textColor="@color/white"
             android:layout_gravity="center_vertical"
             android:textSize="18sp"/>
         <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="5dp"
             android:src="@drawable/right_piont"/>
         <TextView 
             android:id="@+id/reserve_station"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/reserve_time"
             android:layout_marginLeft="2dp"
             android:hint="加油站"
             android:textColor="@color/white"
             android:textSize="20sp"/>
         </LinearLayout>
         <ImageView 
             android:id="@+id/reserve_qrcode"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginTop="25dp"
             android:layout_marginRight="25dp"
             android:src="@drawable/reserve_qrcode"/>
         
     </RelativeLayout>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginBottom="15dp"
         android:background="#fff"
         android:orientation="vertical">
         <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_centerVertical="true"
                android:text="手机"
                android:textSize="16dp"
                android:textColor="@color/textcolor_grey"/>
            <TextView 
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_centerVertical="true"
                android:text="加油类型"
                android:textSize="16dp"
                android:textColor="@color/textcolor_grey"/>
            <TextView 
                android:id="@+id/oil_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_centerVertical="true"
                android:text="加油金额"
                android:textSize="16dp"
                android:textColor="@color/textcolor_grey"/>
            <TextView 
                android:id="@+id/reserve_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/gas_detail_msg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_centerVertical="true"
                android:text="加油站详细信息"
                android:textSize="16dp"
                android:textColor="@color/textcolor_grey"/>
            <ImageButton 
                android:id="@+id/station_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_pri_maps_grey"
                android:background="#0fff"/>
        </RelativeLayout>
        <com.cumt.view.ButtonRectangle  
            android:id="@+id/start_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="导 航"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:textSize="9.0sp"/>
        <com.cumt.view.ButtonRectangle 
            android:id="@+id/cancel_reserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="取消预约"
            android:background="@color/red"
            android:textColor="@color/white"
            android:textSize="9.0sp"/>
     </LinearLayout>
         
</LinearLayout>
